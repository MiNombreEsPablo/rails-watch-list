<h1>Lists#show</h1>
<p>Find me in app/views/lists/show.html.erb</p>
<%= link_to "add a movie", new_list_bookmark_path(@list) %>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1>Le Wagon brings <strong>tech skills</strong> to <strong>creative people</strong>!</h1>
    <p>Change your life and learn to code at one of our campuses around the world.</p>
    <a class="btn btn-flat" href="#">Apply now</a>
  </div>
</div>

<div class="container p-3">
  <div class="row">
    <% @list.bookmarks.each do |movie_bookmark| %>
    <% movie = Movie.find(movie_bookmark.movie_id) %>
    <div class="col md-6">
      <div class="card movie-card" style="width: 18rem;">
        <img src="<%= movie.poster_url %>" class="card-img-top" alt="<%= movie.title %>">
        <div class="card-body">
          <h5 class="card-title"><%= movie.title %></h5>
          <p class="card-text"><%= movie.rating %> <i class="fa-solid fa-star" style="color: orange"></i></p>
          <p class="card-text"><%= movie.overview[0, 100] %>...</p>
          <hr>
          <figcaption class="blockquote-footer">
            <%= movie_bookmark.comment %>
          </figcaption>
        </div>
        <%= link_to "Remove from list", bookmark_path(movie_bookmark), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: "btn btn-danger" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
